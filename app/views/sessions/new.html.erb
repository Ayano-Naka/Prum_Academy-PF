<header>
    <div class="header">
        <span>My Portforio</span>
        <a href="/login">ログイン</a>
    </div>
</header>
<div class="login">
    <h3>ログイン</h3>
    <%= form_for(:session, url: login_path) do |f| %>
        <div class="login-input">
            <p><%= f.label :メールアドレス %></p>
            <p><%= f.email_field :email, :class => 'under-line' %></p>
            <p><%= f.label :パスワード %></p>
            <p><%= f.password_field :password, :class => 'under-line' %></p>
            <%= f.submit "ログインする"%>
        </div>
    <% end %>
</div>